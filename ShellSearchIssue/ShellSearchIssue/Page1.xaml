<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="ShellSearchIssue.Page1"
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:ios="clr-namespace:Xamarin.Forms.PlatformConfiguration.iOSSpecific;assembly=Xamarin.Forms.Core"
             xmlns:local="clr-namespace:ShellSearchIssue"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:sf="clr-namespace:Syncfusion.XForms.TabView;assembly=Syncfusion.SfTabView.XForms"
             Title="Page One"
             ios:Page.UseSafeArea="True"
             mc:Ignorable="d">

    <Shell.SearchHandler>

        <local:SearchBarHandler BackgroundColor="White"
                                DisplayMemberName="Name"
                                Keyboard="{x:Static Keyboard.Text}"
                                Placeholder="ICAO"
                                SearchBoxVisibility="Collapsible"
                                ShowsResults="False" />

    </Shell.SearchHandler>

    <sf:SfTabView>

        <sf:SfTabItem Title="One">

            <sf:SfTabItem.Content>

                <Grid />

            </sf:SfTabItem.Content>

        </sf:SfTabItem>

    </sf:SfTabView>

</ContentPage>